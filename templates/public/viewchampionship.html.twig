{% extends 'base.html.twig' %}

{% block title %}Championship view
{% endblock %}

{% block body %}
{% include "header.html.twig" %}
<h1>Championship view</h1>

<table class="table">
	<thead>
		<tr>
			<th>Id</th>
			<th>ChampionshipName</th>
			<th>ChampionshipYear</th>
			<th>ChampionshipDescription</th>
			<th>ChampionshipStable</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td>{{ championship.id }}</td>
			<td>{{ championship.championshipName }}</td>
			<td>{{ championship.championshipYear ? championship.championshipYear|date('Y-m-d') : '' }}</td>
			<td>{{ championship.championshipDescription }}</td>
			<td>
				{% for championshipStable in championship.stables %}
					{{ championshipStable.stableName }}
				{% endfor %}
			</td>
		</tr>

	</tbody>
</table>
<a href="{{ path('championships_index') }}">
	<button>Return</button>
</a {% endblock %}
