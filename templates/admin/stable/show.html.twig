{% extends 'base.html.twig' %}

{% block title %}Stable
{% endblock %}

{% block body %}
	{% include "header.html.twig" %}
	<h1>Stable</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ stable.id }}</td>
			</tr>
			<tr>
				<th>StableName</th>
				<td>{{ stable.stableName }}</td>
			</tr>
			<tr>
				<th>StableFirstColor</th>
				<td>{{ stable.stableFirstColor }}</td>
			</tr>
			<tr>
				<th>StableSecondColor</th>
				<td>{{ stable.stableSecondColor }}</td>
			</tr>
			<tr>
				<th>StableChampionship</th>
				<td>{{ stable.championship.championshipName }}</td>
			</tr>
			<tr>
				<th>StablePilots</th>
				<td>
					{% for stablePilot in stable.pilots %}
						{{ stablePilot.pilotFirstName }}
					{% endfor %}
				</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('stable_index') }}">back to list</a>

	<a href="{{ path('stable_edit', {'id': stable.id}) }}">edit</a>

	{{ include('admin/stable/_delete_form.html.twig') }}
{% endblock %}
